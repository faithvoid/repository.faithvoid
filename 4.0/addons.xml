<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon id="metadata.programs.nekoScraper" name="nekoScraper" version="1.0.0" provider-name="faithvoid">
  <requires>
    <import addon="xbmc.metadata" version="2.1.0"/>
    <import addon="xbmc.python" version="2.7.18"/>
  </requires>
  <extension point="xbmc.metadata.scraper.programs" library="default.py"/>
  <extension point="xbmc.addon.metadata">
    <reuselanguageinvoker>true</reuselanguageinvoker>
    <summary lang="en_GB">Scraper for XBMC4Gamers artwork and metadata, powered by IGDB + MobCat's Xbox Title ID Database.</summary>
    <description lang="en_GB">Scrape metadata and artwork from XBMC4Gamers dashboard from IGDB + MobCat's Xbox Title ID Database!</description>
    <platform>xbox</platform>
    <license>GPL-2.0-or-later</license>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>

<addon id="script.nekoFeatures" name="nekoFeatures" version="1.0.0" provider-name="faithvoid">
  <requires>
    <import addon="xbmc.python" version="2.7.18"/>
  </requires>

  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>

  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Feature list browser for XBMC4Xbox, meant to be used in combination with nekoScraper metadata.</summary>
    <description lang="en_GB">Feature list browser for XBMC4Xbox, meant to be used in combination with nekoScraper metadata.</description>
    <platform>xbox</platform>
    <license>GPL-2.0-or-later</license>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>

</addons>